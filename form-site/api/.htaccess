# Block direct access to PHP include files (not API endpoints)
<Files "config.php">
    Require all denied
</Files>

<Files "helpers.php">
    Require all denied
</Files>

<Files "encryption.php">
    Require all denied
</Files>

<Files "google-calendar.php">
    Require all denied
</Files>

# Prevent directory listing
Options -Indexes

# CORS: allow Authorization header in preflight requests
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
</IfModule>

# Handle OPTIONS preflight at Apache level (before PHP)
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]
