# Block direct access to PHP include files (not API endpoints)
<Files "config.php">
    Require all denied
</Files>

<Files "helpers.php">
    Require all denied
</Files>

<Files "encryption.php">
    Require all denied
</Files>

<Files "google-calendar.php">
    Require all denied
</Files>

# Prevent directory listing
Options -Indexes

# Security headers (CORS handled in PHP by corsHeaders())
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
</IfModule>

